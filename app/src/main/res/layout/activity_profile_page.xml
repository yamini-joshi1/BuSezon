<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
tools:context="com.example.mansi.busezon.profile_page">
    <LinearLayout    android:id="@+id/main_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="0.1"
            android:background="#009688"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHighlight="@color/category_orange"
        android:textAlignment="center"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:text="MY PROFILE"
        android:textStyle="italic"
        android:textColor="#009688"
        android:layout_margin="16dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#f1eded"
        android:layout_marginBottom="16dp">
        >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="name:"
        android:textColor="#020202"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" AAKRITI JOHAR"
            android:textColor="#020202"
            /> </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f1eded"
        android:orientation="horizontal"
        android:layout_margin="16dp"
        android:textColor="#020202">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="bio: "
            android:textColor="#020202"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#020202"
            android:text="love shopping"
            /> </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
        android:background="#f1eded"
        android:layout_margin="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="email address: "
        android:textColor="#020202"
        android:layout_gravity="center"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="aakritijohar@gmail.com"
        android:maxLines="1"
        android:textColor="#020202"

        android:layout_gravity="center"
        /> </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:background="#f1eded"
        android:orientation="horizontal"
    android:layout_margin="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="#020202"
        android:text="contact: "
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="998789627672"
        android:textColor="#020202"
        /> </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f1eded"
        android:orientation="horizontal"
        android:layout_margin="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#020202"
            android:text="location: "
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="vasant kunj, delhi"
            android:textColor="#020202"

            /> </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="16dp">

        <Button
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:text="MY WISHLIST"
            android:background="#009688"
            /></LinearLayout>
    <ListView
        android:id="@+id/list"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.82"
        android:divider="@null"
        android:dividerHeight="0dp"/>
    <com.roughike.bottombar.BottomBar
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#009688"
        android:baselineAligned="true"
        android:gravity="end"
        android:layout_gravity="end"
        app:bb_tabXmlResource="@xml/bottombar_tabs" />
</LinearLayout>
</android.support.constraint.ConstraintLayout>
